<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.SaveOurPets" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="backgroundColor">@color/blue_night</item>
        <item name="android:windowBackground">@color/blue_night</item>
        <item name="android:textColor">@color/white_Default</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorPrimary">@color/blue_night</item>
        <item name="colorPrimaryVariant">@color/blue_night</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.SaveOurPets.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="backgroundColor">@color/blue_200</item>
        <item name="android:windowBackground">@color/blue_200</item>
    </style>

    <style name="Theme.SaveOurPets.NoActionBar.Admin">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="backgroundColor">@color/white_Default</item>
        <item name="android:windowBackground">@color/blue_200</item>
    </style>
</resources>